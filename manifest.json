{
    "name": "QuickTrader",
    "description": "Find and enter at the best limit order price for faster trade execution using the TD WebBroker Dashboard.",
    "version": "1.0",
    "manifest_version": 2,

    "icons": {
        "16": "./img/icon16.png",
        "32": "./img/icon32.png",
        "48": "./img/icon48.png",
        "128": "./img/icon128.png"
    },
    
    "browser_action": {
        "default_popup": "popup.html#popup"
    },

    "background": {
        "scripts": ["./js/background.js", "./js/popup.js"]
    },

    "options_page": "./options.html",

    "permissions": [
        "tabs", 
        "https://*/*",
        "storage", 
        "background"
    ]
}